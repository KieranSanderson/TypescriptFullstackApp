{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "types": ["jest", "node"],
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
    },
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/__test__/**.tsx"
  ],
  "exclude": [
    "dist/**/*.ts"
  ]
}